<h1>StockAnnotator</h1>
<p>A tool for personal investors to make annotations and journal entries so that they can <br> keep track of their thoughts and reasonings, and reflect on them at a later point.</p>

<div class="row">
  <div class="col-md-6 stock-chart">
    <div>Chart</div>
  </div>

  <div class="col-md-2 stock-ticker" ng-controller="StockController">
    <div>My Portfolio</div>

    <div class = "input_board">
      <form>
        Ticker: <input type="text" ng-model="stock">
        <input name="commit" type="submit" value="Add Stock" ng-click="submitStock()" >
      </form>
    </div>

    <div ng-repeat="object in stored_stocks">
      <div class="stock_item" ng-hide="editing">
        <div>
          <input type="checkbox" ng-model="display">
          {{object.ticker}}
          <span class="glyphicon glyphicon-remove" aria-hidden="true" ng-click="deleteStock(object.id)"></span>
          <span class="glyphicon glyphicon-edit" aria-hidden="true" ng-click="editing = true"></span>
        </div>
      </div>
      <form ng-show="editing" ng-dblclick="editing = false; updateStock(object)">
        Ticker: <input type="text" ng-model="object.ticker">
      </form>
    </div>

  </div>

<!-- My Annotations -->

  <div class="col-md-4 annotation" ng-controller="AnnotationController">

    <div>My Notes</div>

<!-- True inout board -->
    <div class = "input_board">
      <form>
        Title: <input type="text" ng-model="title">
        <input type="date" ng-model="annodate">
        <textarea ng-model="annotation" name="annotation[content]" rows="8" cols="50" placeholder="Write your note here"></textarea>
        <input name="commit" type="submit" value="Add Note" ng-click="submitAnnotation()" >
      </form>
    </div>

<!-- Displayed Data -->
    <div ng-repeat="object in stored_annotations">
      <div class="annotation_item" ng-hide="editing">
        <h3>{{object.title}}</h3>
        <div>{{object.date}}</div>
        <div>
          <span class="glyphicon glyphicon-remove" aria-hidden="true" ng-click="deleteAnnotation(object.id)"></span>
          <span class="glyphicon glyphicon-edit" aria-hidden="true" ng-click="editing = true"></span>
        </div>
        <div>{{object.content}}</div>
      </div>
      <form ng-show="editing" ng-dblclick="editing = false; updateAnnotation(object)">
        Title: <input type="text" ng-model="object.title">
        <input type="text" ng-model="object.date">
        <textarea ng-model="object.content" name="annotation[content]" rows="8" cols="50" placeholder="Write your note here"></textarea>
      </form>
    </div>
  </div>
</div>



